//- Extends the page layout
extends ../layout/page-layout

block content

  .row.row-table(style="height: 100%; padding: 50px 0; background-color: #2c3037")
    .col-lg-3.col-md-6.col-sm-8.col-xs-12.align-middle
      // START panel
      .panel.panel-default.panel-flat(data-toggle="play-animation",data-play="fadeInUp",data-offset="0")
        p.text-center.mb-lg
          br
          a(href="#")
            img.block-center.img-rounded(src='../app/img/logo3.png', alt='Image')
        p.text-center.mb-lg
          strong.text-muted PASSWORD RESET
        .panel-body
          form(role='form')
            p.text-center Fill with your mail to receive instructions on how to reset your password.
            .form-group.has-feedback
              label(for='resetInputEmail1') Email address
              input#resetInputEmail1.form-control(type='email', placeholder='Enter email')
              span.fa.fa-envelope.form-control-feedback.text-muted
            button.btn.btn-danger.btn-block(type='submit') Reset
                
      // END panel
